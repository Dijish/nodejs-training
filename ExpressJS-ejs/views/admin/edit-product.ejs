<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form action="/admin/<% if (editing) { %>edit-product<% } else { %>product<% } %>" method="POST">
            Ttiel: <input type="text" name="title" value="<% if (editing) { %><%= product.title %> <% } %>" />
            Image: <input type="text" name="imageUrl", id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %> <% } %>" />
            Price: <input type="text" name="price", id="price" step="0.01" value="<% if (editing) { %><%= product.price %> <% } %>" />
            Description: <input type="text" name="desc", id="desc" value="<% if (editing) { %><%= product.desc %> <% } %>" />
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId" />
            <% } %>
            <button type="submit"><% if (editing) { %>Edit<% } else { %> Add <% } %> Prodct</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>