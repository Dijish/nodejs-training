<h1>My Products</h1>
<div class="grid">
    {{#if hasProducts }}
        {{#each prods}}
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{this.title}}</h1>
                </header>
                <div class="card__image">
                    <img src="https://www.shutterstock.com/image-photo/mock-used-magazine-on-gray-600w-689695399.jpg" alt="A Book" />
                </div>
                <div class="card__content">
                    <h2 class="product__price">$19.99</h2>
                    <p class="product__description">A very intersting book</p>
                </div>
                <div class="card__actions">
                    <button>Add to Cart</button>
                </div>
            </article>
        {{/each}}
    {{else}}
        <h1>No Products found!</h1>
    {{/if}}
</div>